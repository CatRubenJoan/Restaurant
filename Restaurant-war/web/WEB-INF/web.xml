<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>controllerPrincipal</servlet-name>
        <servlet-class>controllers.controllerPrincipal</servlet-class>
        <init-param>
            <param-name>pageX</param-name>
            <param-value>controllers.TESTsousController</param-value>
        </init-param>
        <init-param>
            <param-name>pageType</param-name>
            <param-value>controllers.SsControllerType</param-value>
        </init-param>
        <init-param>
            <param-name>pageSousType</param-name>
            <param-value>controllers.SsControllerSousType</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>controllerPrincipal</servlet-name>
        <url-pattern>/controllerPrincipal</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>EJBType</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>beanSession.EJBTypeLocal</local>
        <ejb-link>Restaurant-ejb.jar#EJBType</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>EJBType1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>beanSession.EJBTypeLocal</local>
        <ejb-link>Restaurant-ejb.jar#EJBType</ejb-link>
    </ejb-local-ref>
</web-app>
